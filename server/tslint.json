{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "prefer-for-of": false,
    "max-classes-per-file": false,
    "no-console": false,
    "jsdoc-format": false,
    "no-var-requires": false,
    "no-string-literal": false
  }
}
